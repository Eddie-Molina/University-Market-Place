<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context="com.example.morri.messingaround.ResetPassword">

    <EditText
        android:id="@+id/usernameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/usernameText"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/usernameText"
        android:layout_marginTop="36dp"
        android:text="Username" />

    <EditText
        android:id="@+id/oldPassText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/usernameText"
        android:layout_alignRight="@+id/usernameText"
        android:layout_below="@+id/usernameText"
        android:layout_marginTop="38dp"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/oldPassText"
        android:layout_alignStart="@+id/oldPassText"
        android:layout_below="@+id/usernameText"
        android:layout_marginTop="19dp"
        android:text="Old Password" />

    <EditText
        android:id="@+id/newPassText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/oldPassText"
        android:layout_alignStart="@+id/oldPassText"
        android:layout_below="@+id/oldPassText"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/newPassText"
        android:layout_alignStart="@+id/newPassText"
        android:layout_below="@+id/oldPassText"
        android:layout_marginTop="11dp"
        android:text="New Password" />

    <EditText
        android:id="@+id/confirmPassText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/newPassText"
        android:layout_alignRight="@+id/newPassText"
        android:layout_below="@+id/newPassText"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/confirmPassText"
        android:layout_alignStart="@+id/confirmPassText"
        android:layout_below="@+id/newPassText"
        android:layout_marginTop="11dp"
        android:text="Confirm Password" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/confirmPassText"
        android:layout_alignStart="@+id/confirmPassText"
        android:layout_below="@+id/confirmPassText"
        android:layout_marginTop="32dp"
        android:text="Cancel" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/confirmPassText"
        android:layout_alignRight="@+id/confirmPassText"
        android:layout_alignTop="@+id/cancelButton"
        android:text="Submit" />
</RelativeLayout>